<div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
    <h3 class="text-xl font-semibold mb-4">Ajouter un commentaire</h3>

    {% if app.user %}
        {{ form_start(commentForm, {
            action: path('comment_new', {id: event.id}),
            attr: {class: 'space-y-4'},
        }) }}
            {{ form_row(commentForm.content) }}
            {{ form_row(commentForm.rating) }}

            <button type="submit"
                    class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold transition">
                Publier le commentaire
            </button>
        {{ form_end(commentForm) }}
    {% else %}
        <p class="text-gray-600">
            <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Connectez-vous</a>
            pour laisser un commentaire.
        </p>
    {% endif %}
</div>
