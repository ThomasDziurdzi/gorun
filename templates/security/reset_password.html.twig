{% extends 'base.html.twig' %}
{% block title %}Réinitialiser le mot de passe · GoRun{% endblock %}
{% block body %}
<h1 class="text-2xl md:text-3xl font-bold mb-6">Réinitialiser le mot de passe</h1>
<div class="bg-white rounded-2xl shadow p-6 max-w-lg">
  <form class="space-y-4">
    <label class="block">
      <span class="block text-sm font-medium text-gray-700">Nouveau mot de passe</span>
      <input type="password" class="w-full px-4 py-3 rounded-2xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="••••••••" />
    </label>
    <button class="bg-green-600 text-white px-6 py-3 rounded-2xl font-semibold hover:bg-green-700">Mettre à jour</button>
  </form>
</div>
{% endblock %}
