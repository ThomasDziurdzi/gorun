{% extends 'base.html.twig' %}
{% block title %}Accueil · GoRun{% endblock %}
{% block body %}

<section class="relative flex flex-col items-center justify-center text-center px-6 py-24 rounded-2xl overflow-hidden">
  <img 
    src="https://images.unsplash.com/photo-1552674605-db6ffd4facb5?q=80&w=1920&auto=format&fit=crop" 
    alt="Coureurs sur un sentier"
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-black/50"></div>
  <div class="relative z-10 text-white max-w-3xl">
    <h1 class="text-4xl md:text-6xl font-extrabold mb-6">Courir ensemble, c'est mieux</h1>
    <p class="text-lg md:text-xl max-w-2xl mb-8 mx-auto">
      Rejoignez une communauté passionnée de running. Participez à des sorties,
      rencontrez des coureurs de votre ville et dépassez vos limites.
    </p>
    <a href="{{ path('app_register') }}" class="bg-green-600 text-white px-6 py-3 rounded-2xl shadow hover:bg-green-700 transition">
      Rejoindre maintenant
    </a>
  </div>
</section>

<section id="evenements" class="px-0 py-12">
  <h2 class="text-3xl font-bold text-center mb-10">Événements à venir</h2>

  {% if upcomingEvents is defined and upcomingEvents|length > 0 %}
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for event in upcomingEvents %}
        {% set confirmedCount = event.registrations|filter(r => r.status.value == 'CONFIRMED')|length %}
        {% set spotsLeft = event.maxParticipants ? event.maxParticipants - confirmedCount : 'Illimité' %}
        {% set statusColor = spotsLeft == 0 ? 'bg-red-600' : (spotsLeft is same as('Illimité') ? 'bg-blue-600' : (spotsLeft <= 5 ? 'bg-amber-500' : 'bg-green-600')) %}

        <article class="relative bg-white rounded-2xl shadow hover:shadow-lg transition overflow-hidden flex flex-col h-full">
          <div class="relative">
            <img src="https://images.unsplash.com/photo-1552674605-db6ffd4facb5?q=80&w=1200&auto=format&fit=crop" 
                 alt="{{ event.title }}" 
                 class="h-48 w-full object-cover" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/10 to-transparent"></div>

            <div class="absolute left-4 top-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full bg-white/90 text-gray-900 text-sm font-medium shadow">
                {{ event.location.city }} • {{ event.distance }}K • {{ event.pace }}
              </span>
            </div>
            <div class="absolute right-0 top-4">
              {# <span class="inline-block {{ statusColor }} text-white text-xs font-semibold px-3 py-1 rounded-l-full shadow">
                {% if spotsLeft == 0 %}
                  Complet
                {% elseif spotsLeft is same as('Illimité') %}
                  Places illimitées
                {% else %}
                  {{ spotsLeft }} places restantes
                {% endif %}
              </span> #}
            </div>
          </div>

          <div class="p-5 flex flex-col flex-1">
            <h3 class="text-lg font-semibold mb-1">{{ event.title }}</h3>
            <p class="text-sm text-gray-600 mb-3">
              {{ event.eventDate|date('l d F Y à H:i', 'Europe/Paris')|capitalize }} • {{ event.location.city }}
            </p>

            <div class="mt-auto flex items-center justify-between">
              <a href="{{ path('event_show', {id: event.id}) }}" class="text-green-600 font-medium hover:underline">
                Voir le détail →
              </a>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <div class="text-center py-12">
      <p class="text-gray-600 text-lg mb-4">Aucun événement à venir pour le moment.</p>
      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('event_new') }}" class="inline-block bg-green-600 text-white px-6 py-3 rounded-2xl hover:bg-green-700 transition">
          Créer le premier événement
        </a>
      {% endif %}
    </div>
  {% endif %}
</section>

<section id="inscription" class="bg-green-600 text-white py-16 text-center rounded-2xl mt-8">
  <h2 class="text-3xl font-bold mb-4">Prêt à chausser vos baskets ?</h2>
  <p class="mb-6 text-lg">Inscrivez-vous gratuitement et rejoignez notre prochaine sortie.</p>
  <a href="{{ path('app_register') }}" class="bg-white text-green-600 px-6 py-3 rounded-2xl font-semibold shadow hover:bg-gray-100 transition">
    Créer un compte
  </a>
</section>

{% endblock %}